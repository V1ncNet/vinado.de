---
import OpenGraph from "../components/OpenGraph.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/base.css";

const _subTitle = Astro.props.subTitle;
const subTitle = _subTitle ? ` â€¢ ${_subTitle}` : "";
const title = "Vincent Nadoll" + subTitle;
const { ogTitle = title, ogDescription } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <OpenGraph title={ogTitle} description={ogDescription} />
    <title>{title}</title>
    <script defer src="/fontawesome/js/brands.js"></script>
    <script defer src="/fontawesome/js/solid.js"></script>
    <script defer src="/fontawesome/js/fontawesome.js"></script>
  </head>
  <body>
    <div class="container">
      <Header />
      <main>
        <slot />
      </main>
    </div>
    <Footer />
  </body>
</html>
